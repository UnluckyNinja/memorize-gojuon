{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node", // vue 3.0

    "isolatedModules": true, // vite

    "experimentalDecorators": true, // vcc

    "useDefineForClassFields": true, // vcc

    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  }
}
